<h1>Jasser des Jahres 
	<% for delta in [-2, -1, 0, 1, 2]%>
		<span class="headlinks" style="font-size:<%= 100/2**delta.abs %>%; padding:<%= 20-5*delta.abs%>px;">
			<% if delta == 0 -%>
				<%=@date.year %>
			<% else -%>
				<%= link_to @date.year + delta, :action => "year", :date => @date.year + delta %>
			<% end -%>
		</span>
	
	<% end %>
</h1>
