<h1>Laufender Schnitt</h1>
<div id="graph" ></div>

<p>Die Grafik zeigt die Entwicklung des Schnitts in den letzten 12 Monaten an</p>


<script>
	GRAPH = document.getElementById('graph');

	var x = [];
	var y = [];
	
	<% @timeseries.each do |key, value| -%>
		x.push(new Date(<%= "#{key.year}, #{key.month-1}, #{key.day}" %>))
		y.push(<%= if value.nil? then "null" else value end %>)
	<% end -%>
	console.log(x)
	console.log(y)
	data = [{
        mode: 'lines',
		connectgaps: true, 
        x: x,
        y: y,
		line: {shape: 'linear'}
		
    }];
	
	
	var selectorOptions = {
	    buttons: [{
	        step: 'month',
	        stepmode: 'backward',
	        count: 1,
	        label: '1m'
	    }, {
	        step: 'month',
	        stepmode: 'backward',
	        count: 6,
	        label: '6m'
	    }, {
	        step: 'year',
	        stepmode: 'todate',
	        count: 1,
	        label: 'YTD'
	    }, {
	        step: 'year',
	        stepmode: 'backward',
	        count: 1,
	        label: '1y'
	    }, {
	        step: 'all',
	    }],
	};
	
	layout = { 	margin: { t: 0 }, 
			  	xaxis: {
					type:"date"
/*					rangeselector: selectorOptions, 
					rangeslider: {},
					range: [<%= Date.today.beginning_of_year.strftime('%Q') %>, <%= Date.today.strftime('%Q') %> ]  
*/				},
				yaxis: {
/*					fixedrange: true }
*/				}
} 
	Plotly.plot( GRAPH, data, layout, {responsive: true});
</script>